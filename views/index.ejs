<%- include('./partials/header') %>

<% for (let cluck of clucks) { %>
  <div class ="row justify-content-center mt-2">
    <div class="col-sm-8">
      <div class="card p-3">
        <div class="media">
          <img class="d-flex align-self-start mr-3" src="/images/chicken.jpg" width = "100px" height = "100px" alt="Generic placeholder image">
          <div class="media-body">
            <h5 class="mt-0"><%= cluck.username %></h5>
            <p><%= cluck.content %></p>
            <img class="card-img" src="<%= cluck.photo_path %>" alt="" />
          </div>
        </div>
      </div>
    </div>
  </div>

<% } %>

<%- include('./partials/footer') %>
